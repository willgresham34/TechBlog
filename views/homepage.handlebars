<div class="d-flex justify-content-center">
  {{!-- Shows each posts on homepage --}}
  <div id="post-wrapper" class="col homepagePosts" style="height: 50em; overflow-y: scroll;">
    <div class="mt-3 px-4 text-center">
      <h4 class="text-danger">All Posts</h4>
    </div>
      {{#each posts as |post|}}    
        <div class="container-fluid my-4 bg-dark">
          <div class="row">
            <div class="col-12 bg-dark p-2">
              <div class="card-header text-center bg-dark text-light">
                <h6 class="card-text bg-dark">Post by {{User.username}}</h6>
                </div>
                <div class="card-body text-center bg-dark text-light">
                  <p class="card-text rounded">{{content}}</p>
                  </div>
                  <form class="comment-form bg-dark text-center text-light" data-id={{id}}>
                    {{!-- {{#each post.Comments as |comment|}}
                      <div class="container-fluid col-12">
                        <div class="row">
                          <div class="col-12 bg-dark p-2">
                            <div class="card-header text-center text-light bg-dark">
                              <h6 class="card-text bg-dark">Comment by {{User.username}}<br> on {{format_date createdAt}} at {{format_time createdAt}}</h6>
                              </div>
                              <div class="card-body">
                                <p class="">{{body}}</p>
                              </div>
                            </div>  
                          </div>
                        
                      </div>
                    {{/each}} --}}
                    <div class="bg-dark">
                      <input class="comment-input bg-light text-center" data-postid={{id}} placeholder="Helpful comment"/>
                      <button type="submit" class="btn btn-outline-light btn-sm new-comment-btn mb-1" data-toggle="modal" data-target="#comment-modal">Add Comment</button>
                    </div>
                  </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
</div>